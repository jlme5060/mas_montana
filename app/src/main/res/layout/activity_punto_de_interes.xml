<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Imagen destacada ocupa todo el ancho y 300dp de alto -->
    <ImageView
        android:id="@+id/miradorImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="Imagen del punto de interés" />

    <!-- Contenido debajo de la imagen -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/miradorImage"
        android:background="#FFFFFF"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/miradorTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Área recreativa de Las Dehesas (Cercedilla)"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/miradorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inicio de la ruta. Desde aquí se accede a la Fuente de Majavilán y al comienzo de la Calzada Romana."
                android:textSize="16sp"
                android:textColor="#555555"
                android:lineSpacingExtra="6dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
