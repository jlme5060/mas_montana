<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"> <!-- Fondo verde claro -->

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:background="#81D4FA"
    android:gravity="center">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccione la comunidad autónoma de la que quieres ver rutas"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center" />
    </LinearLayout>

    <!-- MAIN -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvComunidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comunidad"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="#000000" />

        <!-- Imagen que se redimensiona para ajustarse al contenedor sin recortarse -->
        <ImageView
            android:id="@+id/ivImagen"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

    <!-- FOOTER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnIzquierda"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="← Anterior"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3F51B5"
            android:background="@drawable/rounded_button"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnDerecha"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="Siguiente →"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3F51B5"
            android:background="@drawable/rounded_button"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>
